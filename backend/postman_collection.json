{
  "info": {
    "name": "Aditi Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Full API collection for Aditi E-Learning Backend — Base URL: http://localhost:8080"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080/api/v1" },
    { "key": "token",    "value": "" }
  ],
  "item": [

    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/register",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Test@1234\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.data && json.data.accessToken) {",
                  "  pm.collectionVariables.set('token', json.data.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"Admin@1234\"\n}"
            }
          }
        },
        {
          "name": "Me (Get current user)",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/auth/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/refresh",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"YOUR_REFRESH_TOKEN\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/logout",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },

    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/categories?page=0&size=10&sortBy=orderIndex&sortDir=asc",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                { "key": "page",    "value": "0" },
                { "key": "size",    "value": "10" },
                { "key": "sortBy",  "value": "orderIndex" },
                { "key": "sortDir", "value": "asc" }
              ]
            }
          }
        },
        {
          "name": "Get Category By ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/categories/1"
          }
        },
        {
          "name": "Get Category By Slug",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/categories/slug/web-development"
          }
        },
        {
          "name": "Create Category (ADMIN)",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/categories",
            "header": [
              { "key": "Content-Type",  "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Mobile Development\",\n  \"slug\": \"mobile-development\",\n  \"description\": \"Android, iOS, Flutter, React Native\",\n  \"isActive\": true,\n  \"orderIndex\": 6\n}"
            }
          }
        },
        {
          "name": "Update Category (ADMIN)",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/categories/1",
            "header": [
              { "key": "Content-Type",  "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"ការអភិវឌ្ឍន៍គេហទំព័រ\",\n  \"slug\": \"web-development\",\n  \"description\": \"Updated description\",\n  \"isActive\": true,\n  \"orderIndex\": 1\n}"
            }
          }
        },
        {
          "name": "Delete Category (ADMIN)",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/categories/1",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },

